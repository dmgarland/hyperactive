<% @page_title = @content.title %>

<div id="content-wrap">

	<div id="subpage">
		<%= render :partial => 'shared/content/hidden_notice' %>
		<div class="singlepost">
			<%= render :partial => 'videos/video', :locals => {:video => @content} %>
		</div>
	</div>
<p>
	<%= render :partial => 'shared/content/hiding_controls' %>
</p>
	<p>
		<% if editable_by?(current_user, @content)  %>
			<%= link_to 'Edit', edit_video_url(@content) %> |
		<% end %><%= link_to 'Back', videos_url %>
	</p>	
	
</div>

<% content_for :sidebar do %>
<p>This is some sidebar content</p>
<% end %>