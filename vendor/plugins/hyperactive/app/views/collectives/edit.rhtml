<h1>Editing collective</h1>

<%= error_messages_for :collective %>

<% form_for(:collective, :url => collective_path(@collective), :html => { :method => :put }) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Summary</b><br />
    <%= f.text_area :summary %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', collective_path(@collective) %> |
<%= link_to 'Back', collectives_path %>