<h1>Listing collectives</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Summary</th>
  </tr>
  
<% for collective in @collectives %>
  <tr>
    <td><%=h collective.name %></td>
    <td><%=h collective.summary %></td>
    <td><%= link_to 'Show', collective_path(collective) %></td>
    <td><%= link_to 'Edit', edit_collective_path(collective) %></td>
    <td><%= link_to 'Destroy', collective_path(collective), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New collective', new_collective_path %>