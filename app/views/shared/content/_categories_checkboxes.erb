<div class="categories_checkboxes">
    <ul>
        <% Category.find_all_by_active(true).each do |c| %>
        <li><input type="checkbox" name="category_tags[]" onClick="toggleTag(this.value, this.checked)" value="<%= c.name %>" 
                  <% if @content.tags.include?(c.name) %> 
                    checked="checked" 
                  <% end %> />
        <%= c.name %></li>
        <% end %>
    </ul>
</div>