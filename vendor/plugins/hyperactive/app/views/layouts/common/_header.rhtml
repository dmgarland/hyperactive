<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<title><%= SITE_NAME %> | <%= @current_controller.humanize.capitalize %> | <%=@current_action.humanize.capitalize %> <%= " | " +  h(@page_title) unless @page_title.nil? %></title>
    <%= stylesheet_link_tag 'default', :plugin => css_from_plugin? %>
  	<%# javascript_include_tiny_mce_if_used %>
	<%= javascript_include_tag 'tiny_mce/tiny_mce', :plugin => 'tiny_mce' %>
  	<%= tiny_mce if using_tiny_mce? %>   
	<%= javascript_include_tag :prototype, :plugin => 'hyperactive' %>
	<%= javascript_include_tag :application, :plugin => 'hyperactive' %>	
	<%= javascript_include_tag :effects, :plugin => 'hyperactive' %>
	<%= javascript_include_tag :controls, :plugin => 'hyperactive' %>
	<%= javascript_include_tag 'flash' %>
	<%= javascript_include_tag 'json' %>
	<%= javascript_include_tag 'cookie' %>
     <% if controller.action_name == "timeline" %>
        <%= javascript_include_tag 'uk-timeline', :plugin => 'hyperactive' %>
		<%= javascript_include_tag 'timeline/timeline-api', :plugin => 'hyperactive' %>
     <% end %>
     <% if (@current_action == "show" && @current_controller == "videos") || (@current_controller == "home" && @current_action == "index")  %>
        <%= javascript_include_tag 'swfobject', :plugin => 'hyperactive' %>
     <% end %>     
    <% if controller.action_name == "by_place_tag" %>
        <%= auto_discovery_link_tag(:rss, :controller => 'feeds', :action => 'upcoming_events_by_place', :scope => params[:scope]) %>
    <% elsif controller.action_name == "by_tag" %>
        <%= auto_discovery_link_tag(:rss, :controller => 'feeds', :action => 'upcoming_events_tagged', :scope => params[:scope]) %>
    <% else %>
        <%= auto_discovery_link_tag(:rss, :controller => 'feeds', :action => 'latest_articles') %>
    <% end %>
<meta name="keywords" content="" />
<meta name="description" content="" />
</head>

<% if controller.action_name == "timeline" %>
<body onload="onLoad();" onresize="onResize();">
<% else %>
<body>
<% end %>
<!-- start header -->
<div id="logo">
	<p><%= link_to image_tag("logo_greyscale.png", :plugin => 'hyperactive'), {:controller => '/home', :action => 'index' } %></p>
	<h1><%= link_to "#{SITE_NAME}", {:controller => '/home', :action => 'index' } %></h1>
	<!-- <p>By Free CSS Templates</p> -->
</div>
<div id="menu">
	<ul id="main">
		<%= tab_for("Publish".t, publish_url, :controller_name => "publish") %>
		<%= tab_for("Articles".t, articles_url, :controller_name => "articles") %>
		<%= tab_for("Events".t, upcoming_events_url, :controller_name => "events") %>
		<%= tab_for("Videos".t, videos_url, :controller_name => "videos") %>
		<%= tab_for("Account".t, account_url, :controller_name => "login") %>
	</ul>
</div>
<!-- end header -->


