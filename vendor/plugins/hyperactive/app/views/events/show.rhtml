<% @page_title = @content.title %>
<%= error_messages_for :comment %>
<div class="post">
<h1 class="title"><%=h @content.title %></h1>
<p class="byline"><%= image_tag "date.png", :plugin => "hyperactive" %> <small><%= 'Event date:'.t %> <%=h long_date(@content.date) %></small> <%= "by".t %> <strong><%=h @content.published_by.titleize %></strong></p>

<%= render :partial => 'shared/content/hidden_notice' %>

<% if @content.belongs_to_event_group? %>
    <p>
    	<%= 'This event is part of a series of repeating events.  To see
    	all the events,'.t %> <%= link_to("click here".t, :action => 'list_by_event_group', :id => @content.event_group) %>.
	</p>
<% end %>

<p><em><%= 'Tagged as:'.t %></em> <%= render_tag_list %></p>

<div class='entry'><%= auto_link(@content.summary) %></div>

<p><em><%= 'Places:'.t %></em><%= render_place_tag_list %></p>

<% if @content.videos.length > 0 %>
    <h3><%= 'Videos'.t %></h3>
    <%= render :partial => "videos/video_summary", :collection => @content.videos %>
<% end %>
<% if @content.photos.length > 0 %>
    <p><h3><%= 'Photos'.t %></h3></p>
    <% @content.photos.each do |photo| %>
        <p><%= link_to (image_tag photo.file.medium.url), photo.file.url %><br/>
        <strong><%=h photo.title %></strong>
        </p>
    <% end %>
<% end %>
<% if @content.event_group_photos.length > 0 %>
    <p><h3><%= 'Event Group Photos'.t %></h3></p>
    <% @content.event_group_photos.each do |photo| %>
        <p><%= link_to (image_tag photo.file.medium.url), photo.file.url %><br/>
        <%=h photo.title %>
        </p>
    <% end %>
<% end %>            

<% if @content.file_uploads.length > 0 %>
    <p><h3><%= 'Attached Files'.t %></h3><br/>
    <% @content.file_uploads.each do |file_upload| %>
        <p><%= link_to image_tag("gedit-icon.png", :plugin => 'hyperactive'), file_upload.file.url %> 
        <%=h file_upload.title %></p>
    <% end %></p>
<% end %>
<p><%= auto_link(@content.body) %></p>
<% if @content.links.length > 0 %>
    <h3>Links:</h3>
    <% @content.links.each do |link| %>
        <p><%= link_to h(link.title), link.url %><br/>
        <%=h link.description %></p>
    <% end %>
<% end %>

<% if @content.contact_email != nil %>
    <p><em><%= 'Contact email:'.t %></em> <%= mail_to h(@content.contact_email) %></p>
<% end %>
<% if @content.contact_phone != nil %>
    <p><em><%= 'Contact phone:'.t %></em> <%=h @content.contact_phone %></p>
<% end %>            

<%= render :partial => 'shared/content/hiding_controls' %>

<% if @content.has_comments? %><h2><%= "Comments".t %></h2> <% end %>
<%= render :partial => 'shared/content/comments/comment_display', :collection => @content.comments %>
<%= render :partial => 'shared/content/comments/comment_controls' %>

</div>

<% content_for :sidebar do %>
	<%= render :partial => "events/sidebar/feedbox" %>
	<%= render :partial => "events/sidebar/ical" %>
<% end %>