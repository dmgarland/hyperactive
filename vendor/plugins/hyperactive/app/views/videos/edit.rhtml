<h1><%= "Editing video".t %></h1>

<% form_for(:content, :url => video_path(@content), :html => { :method => :put, :multipart => true }) do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>
  <p><%= submit_tag 'Save changes'.t %></p>
<% end %>

<p><%= button_to 'Delete this video'.t, video_path(@content), :method => :delete, :confirm => 'Are you sure?'.t %></p>

<p><%= link_to 'Show'.t, :action => 'show', :id => @content %> |
<%= link_to 'Back'.t, :action => 'index' %></p>
