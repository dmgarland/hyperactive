<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<title><%= SITE_NAME %> | <%= @current_controller.humanize.capitalize %> | <%=@current_action.humanize.capitalize %> <%= " | " +  h(@page_title) unless @page_title.nil? %></title>
    <%= stylesheet_link_tag 'default', :plugin => 'hyperactive' %>
    <%= javascript_include_tag :prototype, :plugin => 'hyperactive' %>
	<%= javascript_include_tag :application, :plugin => 'hyperactive' %>	
	<%= javascript_include_tag :effects, :plugin => 'hyperactive' %>		
     <% if controller.action_name == "timeline" %>
        <%= javascript_include_tag 'uk-timeline', :plugin => 'hyperactive' %>
		<%= javascript_include_tag 'timeline/timeline-api', :plugin => 'hyperactive' %>
     <% end %>
     <% if (@current_action == "show" && @current_controller == "videos") || (@current_controller == "home" && @current_action == "index")  %>
        <%= javascript_include_tag 'swfobject', :plugin => 'hyperactive' %>
     <% end %>     
    <% if controller.action_name == "by_place_tag" %>
        <%= auto_discovery_link_tag(:rss, :controller => 'event_feed', :action => 'upcoming_place', :scope => params[:scope]) %>
    <% elsif controller.action_name == "by_tag" %>
        <%= auto_discovery_link_tag(:rss, :controller => 'event_feed', :action => 'upcoming_tagged', :scope => params[:scope]) %>
    <% else %>
        <%= auto_discovery_link_tag(:rss, :controller => 'event_feed', :action => 'upcoming') %>
    <% end %>
<meta name="keywords" content="" />
<meta name="description" content="" />
</head>

<% if controller.action_name == "timeline" %>
<body onload="onLoad();" onresize="onResize();">
<% else %>
<body>
<% end %>
<!-- start header -->
<div id="logo">
	<p><%= link_to image_tag("logo_greyscale.png", :plugin => 'hyperactive'), '/home' %></p>
	<h1><%= link_to "#{SITE_NAME}", {:controller => '/home'} %></h1>
	<p>By Free CSS Templates</p>
</div>
<div id="menu">
	<ul id="main">
		<%= tab_for("Publish", publish_url, :controller_name => "publish") %>
		<%= tab_for("Articles", articles_url, :controller_name => "articles") %>
		<%= tab_for("Events", events_url, :controller_name => "event") %>
		<%= tab_for("Videos", videos_url, :controller_name => "videos") %>
		<% if current_user.has_permission?("see_admin_nav") %>		
			<%= tab_for("Categories", categories_url, :controller_name => "category") %>
			<%= tab_for("Pages", pages_url, :controller_name => "page") %>
			<%= tab_for("Users", users_url, :controller_name => "user") %>
			<%= tab_for("Roles", roles_url, :controller_name => "role") %>
			<%= tab_for("Permissions", static_permissions_url, :controller_name => "static_permission") %>
		<% end %> 
		<% unless current_user.is_anonymous? %>
			<%= tab_for("Logout", logout_url, {:controller_name => "login", :action_name => "logout"}) %>
		<% else %>
			<%= tab_for("Login", login_url, {:controller_name => "login", :action_name => "login"}) %>		
			<%= tab_for("Register", register_url, :controller_name => "registration") %>		
		<% end %>
	</ul>
</div>
<!-- end header -->


