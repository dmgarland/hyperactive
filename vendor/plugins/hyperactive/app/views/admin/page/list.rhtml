<h1><%= 'Listing pages'.t %></h1>

<table>
  <tr>
  <% for column in Page.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for page in @pages %>
  <tr>
  <% for column in Page.content_columns %>
    <td><%=h page.send(column.name).slice(0, 50) %></td>
  <% end %>
    <td><%= link_to 'Show'.t, :action => 'show', :id => page %></td>
    <td><%= link_to 'Edit'.t, :action => 'edit', :id => page %></td>
    <td><%= link_to 'Destroy'.t, { :action => 'destroy', :id => page }, :confirm => 'Are you sure?', :method => "post" %></td>
  </tr>
<% end %>
</table>

<%= paginating_links(@pages) %>

<br />

<%= link_to 'New page', :action => 'new' %>
