<h1><%= I18n.t 'articles.edit.title' %></h1>

<% form_for(:content, :url => article_path(@content), :html => { :method => :put, :multipart => true }) do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>
  <p><%= submit_tag 'Save changes' %></p>
<% end %>   
<p><%= button_to I18n.t('content.form.delete'), article_path(@content), :method => :delete, :confirm => I18n.t('general.are_you_sure') %></p>