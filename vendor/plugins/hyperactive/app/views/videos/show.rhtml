<% @page_title = @content.title %>

<div id="content-wrap">

	<div id="subpage">
		<%= render :partial => 'shared/content/hidden_notice' %>
		<div class="singlepost">
			<%= render :partial => 'videos/video', :locals => {:video => @content} %>
		</div>
	</div>
<p>
	<%= render :partial => 'shared/content/hiding_controls' %>
</p>
	<p>
		<% if editable_by?(current_user, @content)  %>
			<%= link_to 'Edit', edit_video_url(@content) %> |
		<% end %><%= link_to 'Back', videos_url %>
	</p>	
	
</div>

<% content_for :sidebar do %>
	<ul>
		<li>
			<%= render :partial => 'shared/searchbox' %>
		</li>
	</ul>
	<% if !@content.content.nil? %>
		<ul>
			<li>
				<h2>Related <%= @content.content.class.to_s.downcase %></h2>
				<p>This video was originally uploaded as part of the following <%= @content.content.class.to_s.downcase %>.</p>
				<%= render :partial => 'shared/content/list_title', :object => @content.content %>
			</li>
		</ul>
	<% end %>
	<% if !@related_content.empty? %>
		<ul>
			<li>
				<h2>More like this</h2>
				<ul>
				<%= render :partial => 'shared/content/list_title', :collection => @related_content %>
				</ul>
			</li>
		</ul>
	<% end %>
	<% if !@previous_videos.empty? %>
		<ul>
			<li>
			<%= render :partial => 'videos/featured_flash_player' %>	
			</li>
		</ul>
	<% end %>
	<% if !@previous_videos.empty? %>
		<ul>
			<li>
				<h2>Previous videos</h2>
				<ul>
				<%= render :partial => 'shared/content/list_title', :collection => @previous_videos %>
				</ul>
			</li>
		</ul>
	<% end %>
<% end %>