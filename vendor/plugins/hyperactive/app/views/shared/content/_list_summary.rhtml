<div class="post">
	<h1 class="title"><%= link_to h(list_summary.title.titleize), event_url(list_summary) %></h1>
	<% if list_summary.class == Event %>
	<p class="byline"><small><%=h long_date(list_summary.date) %></small></p>
	<% end %>
	<div class="entry">
		<p><%=h list_summary.summary %></p>
		<p class="links"><%= link_to h("Read More"), event_url(list_summary) %></p>
	</div>
</div>
