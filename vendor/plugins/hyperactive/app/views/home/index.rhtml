<!-- start content -->
<div id="content">
<% if !@action_alert.nil? %>
	<div id="action-alert">
		<p><strong>Action alert!: <%= @action_alert.summary %></strong></p>
	</div>
<% end %>

<%= render(:partial => "layouts/common/flash_notice") %>
<%= render(:partial => "shared/content/list_summary", :object => @top_article) unless @top_article.nil? %>

<!-- start sidebars inside content -->
<!--  sidebar_content_left -->
	<div id="subfeature_content_1" class="sidebar_content">
		<%= render_subfeature(0) %>
		<%= render_subfeature(1) %>
	</div>
	<!--  sidebar_content_right -->
	<div id="subfeature_content_2" class="sidebar_content">
		<%= render_subfeature(2) %>
		<%= render_subfeature(3) %>
	</div>
	<div id="special_content" class="sidebar_content_wide">
		<ul>
			<li>
				<h2>Special Features</h2>
					If people like the idea, this box can contain some special text, like a featured analysis, 
					or maybe a tour of the new site.  It is not currently updateable through the admin system
					but it could be made updateable relatively easily.
			</li>
		</ul>
	</div>
	<div id="recent_articles" class="sidebar_content">
		<ul>
			<li>
				<h2><%= 'Older Features'.t %></h2>
				<ul>
					<%= render :partial => '/shared/content/list_title', :collection => @featured_articles unless @featured_articles.nil? %>			
				</ul>
			</li>
		</ul>
	</div>	
	<div id="unused" class="sidebar_content">
		<ul>
			<li>
				<h2><%= 'Promoted Articles'.t %></h2>
				<ul>
				<%= render :partial => '/shared/content/list_title', :collection => @promoted_articles %>			
				</ul>
			</li>
		</ul>
	</div>		
</div>
<!-- end content -->
<!-- start sidebars -->
<div id="sidebar1" class="sidebar">
	<ul>
		<li>
			<h2><%= 'Featured Events'.t %></h2>
			<ul>
				<%= render :partial => '/shared/content/list_title', :collection => @featured_events %>
			</ul>
		</li>	
		<li>
			<h2>Posters!</h2>
			<div id="event_poster">
				<div>
				<p>
					<%= big_thumbnail_for(most_recent_promoted_event_with_image) unless most_recent_promoted_event_with_image.nil? %><br/>
					<%= most_recent_promoted_event_with_image.title unless most_recent_promoted_event_with_image.nil?  %>
				</p>
				</div>
			</div>
		</li>	
		<li>
			<h2><%= 'Upcoming Events'.t %></h2>
			<ul>
			<%= render :partial => '/shared/content/list_title', :collection => @recent_events %>			
			</ul>
		</li>				
		<li>
			<h2><%= link_to "Calendar".t, calendar_month_url %></h2>
			<div id="calendar_wrap">
				<table summary="Calendar">
					<caption>
					October 2007
					</caption>
					<thead>
						<tr>
							<th abbr="Monday" scope="col" title="Monday">M</th>
							<th abbr="Tuesday" scope="col" title="Tuesday">T</th>
							<th abbr="Wednesday" scope="col" title="Wednesday">W</th>
							<th abbr="Thursday" scope="col" title="Thursday">T</th>
							<th abbr="Friday" scope="col" title="Friday">F</th>
							<th abbr="Saturday" scope="col" title="Saturday">S</th>
							<th abbr="Sunday" scope="col" title="Sunday">S</th>
						</tr>
					</thead>
			<!--		<tfoot>
						<tr>
							<td abbr="September" colspan="3" id="prev"><a href="#" title="View posts for September 2007">&laquo; Sep</a></td>
							<td class="pad">&nbsp;</td>
							<td colspan="3" id="next">&nbsp;</td>
						</tr>
					</tfoot> -->
					<tbody>
						<tr>
							<td>1</td>
							<td>2</td>
							<td>3</td>
							<td id="today">4</td>
							<td>5</td>
							<td>6</td>
							<td>7</td>
						</tr>
						<tr>
							<td>8</td>
							<td>9</td>
							<td>10</td>
							<td>11</td>
							<td>12</td>
							<td>13</td>
							<td>14</td>
						</tr>
						<tr>
							<td>15</td>
							<td>16</td>
							<td>17</td>
							<td>18</td>
							<td>19</td>
							<td>20</td>
							<td>21</td>
						</tr>
						<tr>
							<td>22</td>
							<td>23</td>
							<td>24</td>
							<td>25</td>
							<td>26</td>
							<td>27</td>
							<td>28</td>
						</tr>
						<tr>
							<td>29</td>
							<td>30</td>
							<td>31</td>
							<td class="pad" colspan="4">&nbsp;</td>
						</tr>
					</tbody>
				</table>
			</div>
		</li>
	</ul>
</div>
<div id="sidebar2" class="sidebar">
	<%= render :partial => 'shared/searchbox' %>
	<ul>
		<li>
			<%= render :partial => 'videos/featured_flash_player' %>
		</li>	
		<li>
			<h2><%= "Neighbourhoods".t %></h2>
			<%= render(:partial => "shared/tag_cloud", :object=> @place_cloud, :locals => {:tag_type => "place"}) %> 
		</li>
		<li>
			<h2><%= "Tags".t %></h2>
			<%= render(:partial => "shared/tag_cloud", :object=> @cloud, :locals => {:tag_type => "tag"}) %>  
		</li>
		<li>
			<h2><%= 'Info'.t %></h2>
			<ul>
				<%= render :partial => '/page/list_title', :collection => @pages %>
			</ul>
		</li>		
		<li>
			<h2><%= 'Other Indymedias'.t %></h2>
			<ul>
				<li>
					<%= link_to "foo indy", "http://foo.indymedia.org" %>
				</li>
			</ul>
		</li>			
	</ul>
</div>
<!-- end sidebars -->