<p>
  <b>Title:</b>
  <%=h @snippet.title %>
</p>

<p>
  <b>Body:</b>
  <%= @snippet.body %>
</p>

<% if @snippet.has_image? %>
	<p>
		<strong>Image:</strong><br/>
		<%= image_tag @snippet.image.thumb.url %>
	</p>
<% end %>

<p>
  <b>Created on:</b>
  <%=h @snippet.created_on %>
</p>

<p>
  <b>Updated on:</b>
  <%=h @snippet.updated_on %>
</p>


<%= link_to 'Edit', edit_admin_snippet_path(@snippet) %> |
<%= link_to 'Back', admin_snippets_path %>