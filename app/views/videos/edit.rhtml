<h1>Editing video</h1>

<% form_for(:content, :url => video_path(@content), :html => { :method => :put, :multipart => true }) do |f| %>
  <%= render :partial => 'form', :locals => { :f => f } %>
  <p><%= submit_tag 'Save changes' %></p>
<% end %>

<p><%= button_to 'Delete this video', video_path(@content), :method => :delete, :confirm => 'Are you sure?' %></p>