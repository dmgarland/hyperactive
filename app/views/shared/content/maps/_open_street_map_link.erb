<%= hidden_field_tag :content, @content.open_street_map_info.lng, :id => "xlon" %>
<%= hidden_field_tag :content, @content.open_street_map_info.lat, :id => "xlat" %>
<%= hidden_field_tag :content, @content.open_street_map_info.zoom, :id => "xres" %>

<div id="map-show-link">
	<%= image_tag "icons/map.png" %> <%= link_to_function I18n.t('shared.content.maps.see_a_map'), "prepareMapView()" %>
	<small>
    	<%= I18n.t('shared.content.maps.will_load_data', :openstreetmap =>  link_to("Openstreetmap's", "http://openstreetmap.org")) %>
	</small>
</div>

<div id="locinfo">
	<div style="width:658px; height:500px; display:none;" id="map"></div>
</div>
	
<% content_for :javascript do %>
	<%= javascript_include_tag 'goatcodeloader' %>
<% end %>
