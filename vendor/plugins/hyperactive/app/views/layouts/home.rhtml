<%= render(:partial => 'layouts/header') %>

<!-- start page -->
<div id="page">
	<!-- start content -->
	<div id="content">
		<% if flash[:notice] -%>
	        <div id="notice"><%= flash[:notice] %></div>
	    <% end -%>
		<%= @content_for_layout %>
	</div>
	<!-- end content -->
	<!-- start sidebars -->
	<div id="sidebar1" class="sidebar">
		<% if @current_controller == "home" && @current_action == "index" %> 
		<ul>
			<li>
				<h2>Featured Videos</h2>
			    <div id="featuredvideos">
			    	<%= render :partial => 'videos/video_summary', :locals => {:video_summary => @featured_videos.first} unless @featured_videos.blank? %>
				</div>
			    <script type="text/javascript">
			        var so = new SWFObject("/plugin_assets/hyperactive/flash/featuredvideos.swf", "vidplayer", "190", "190", "7", "");
			        so.addParam("menu", "false");
			        so.write("featuredvideos");
			    </script>				
				<%= link_to "View all videos ", videos_path %>
			</li>
			<li>
				<h2>Featured Events</h2>
				<ul>
					<%= render :partial => '/events/event_title_list', :collection => @events %>
				</ul>
				<%= link_to "View all upcoming events", events_path %>
			</li>
		</ul>
		<% end %>
	</div>
	<div id="sidebar2" class="sidebar">
		<ul>
			<li>
				<%= render :partial => 'shared/searchbox' %>
			</li>
			<% if @current_controller == "home" && @current_action == "index" %> 
			<li>
				<h2>Neighbourhoods...</h2>
				<%= render(:partial => "shared/tag_cloud", :object=> @place_cloud, :locals => {:tag_type => "place"}) %> </li>
			<li>
				<h2>Tags</h2>
				<%= render(:partial => "shared/tag_cloud", :object=> @cloud, :locals => {:tag_type => "tag"}) %>  </li>
			<% end %>
			<li>
				<h2><%= link_to "Calendar", calendar_month_url %></h2>
				<div id="calendar_wrap">
					<table summary="Calendar">
						<caption>
						October 2007
						</caption>
						<thead>
							<tr>
								<th abbr="Monday" scope="col" title="Monday">M</th>
								<th abbr="Tuesday" scope="col" title="Tuesday">T</th>
								<th abbr="Wednesday" scope="col" title="Wednesday">W</th>
								<th abbr="Thursday" scope="col" title="Thursday">T</th>
								<th abbr="Friday" scope="col" title="Friday">F</th>
								<th abbr="Saturday" scope="col" title="Saturday">S</th>
								<th abbr="Sunday" scope="col" title="Sunday">S</th>
							</tr>
						</thead>
						<tfoot>
							<tr>
								<td abbr="September" colspan="3" id="prev"><a href="#" title="View posts for September 2007">&laquo; Sep</a></td>
								<td class="pad">&nbsp;</td>
								<td colspan="3" id="next">&nbsp;</td>
							</tr>
						</tfoot>
						<tbody>
							<tr>
								<td>1</td>
								<td>2</td>
								<td>3</td>
								<td id="today">4</td>
								<td>5</td>
								<td>6</td>
								<td>7</td>
							</tr>
							<tr>
								<td>8</td>
								<td>9</td>
								<td>10</td>
								<td>11</td>
								<td>12</td>
								<td>13</td>
								<td>14</td>
							</tr>
							<tr>
								<td>15</td>
								<td>16</td>
								<td>17</td>
								<td>18</td>
								<td>19</td>
								<td>20</td>
								<td>21</td>
							</tr>
							<tr>
								<td>22</td>
								<td>23</td>
								<td>24</td>
								<td>25</td>
								<td>26</td>
								<td>27</td>
								<td>28</td>
							</tr>
							<tr>
								<td>29</td>
								<td>30</td>
								<td>31</td>
								<td class="pad" colspan="4">&nbsp;</td>
							</tr>
						</tbody>
					</table>
				</div>
			</li>
		</ul>
	</div>
	<!-- end sidebars -->
	<div style="clear: both;">&nbsp;</div>
</div>
<!-- end page -->
<%= render :partial => 'layouts/footer' %>
</body>
</html>
