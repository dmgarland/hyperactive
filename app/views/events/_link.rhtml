<% @link = link %>
<div id="<%= "link_#{link.id}" %>">
  <fieldset>
    <label class="first" for="link[]_item_id">
    <%= I18n.t('events.link.link') %>
    </label><br/><br/>
    <label for="link[]_title">
      <%= I18n.t('events.link.title') %>*</label><br/>
      <%= text_field 'link[]', 'title', :size => 30 %>
    <br/><br/>
    <label for="link[]_url">
    <%= I18n.t('events.link.url') %>*</label><br/>
    <%= text_field 'link[]', 'url', :size => 30 %>
    <br/><br/>
    <label for="link[]_description">
    <%= I18n.t('events.link.description') %></label><br/>
    <%= text_area 'link[]', 'description', {:cols => 30, :rows => 3} %>
    <br/><br/>
    <%= sub_list_remove_link link, 'Link', I18n.t('content.form.delete') %>
  </fieldset>
</div>
