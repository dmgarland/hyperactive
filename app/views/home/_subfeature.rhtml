<ul>
  <li>
    <h2><%= link_to(h(subfeature.title), article_path(subfeature)) %></h2>
    <% if subfeature.has_thumbnail? %>
			<%= link_to(image_tag(subfeature.photos.first.file.micro.url, :class => 'left'), subfeature) %>
		<% end %>     
    <%= truncate strip_tags(subfeature.summary), 100 %> | <small><%= link_to I18n.t('general.more') + ' &rarr;', content_path_for(subfeature) %></small>
  </li>
</ul>
