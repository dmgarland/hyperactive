<h2>List <%= plural_name %></h2>

<table class="grid">
<tr>
<% for attribute in attributes -%>
<th><%= attribute.column.human_name %></th>
<% end -%>
<th>&nbsp;</th>
<th>&nbsp;</th>
<th>&nbsp;</th>
</tr>

<%% for <%= singular_name %> in @<%= plural_name %> %>
<tr>
<% for attribute in attributes -%>
<td><%%=h <%= singular_name %>.<%= attribute.name %> %></td>
<% end -%>
<td class="show"><%%= link_to 'Show <%= singular_name %>', admin_<%= singular_name %>_url(<%= singular_name %>), :title => "Show <%= singular_name %>" %></td>
<td class="edit"><%%= link_to 'Edit <%= singular_name %>', edit_admin_<%= singular_name %>_url(<%= singular_name %>), :title => "Edit <%= singular_name %>" %></td>
<td class="delete"><%%= link_to 'Destroy <%= singular_name %>', admin_<%= singular_name %>_url(<%= singular_name %>), :title => "Delete <%= singular_name %>", :confirm => 'Are you sure you want to delete this <%= singular_name %>?', :method => :delete %></td>
</tr>
<%% end %>
</table>

<p>
<%%= link_to 'New <%= singular_name %>', new_admin_<%= singular_name %>_url %>
</p>
