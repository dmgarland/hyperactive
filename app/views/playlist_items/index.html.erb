<h1>Listing playlist_items</h1>

<table>
  <tr>
    <th>Title</th>
  </tr>

<% for playlist_item in @playlist_items %>
  <tr>
    <td><%= link_to(h(playlist_item.title), playlist_item.uri) %></td>
    <td><%= link_to 'Show', group_playlist_item_path(@group, playlist_item) %></td>
    <td><%= link_to 'Edit', edit_group_playlist_item_path(@group, playlist_item) %></td>
    <td><%= link_to 'Destroy', group_playlist_item_path(@group, playlist_item), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New playlist_item', new_group_playlist_item_path(@group) %>

