<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="content-type" content="text/html; charset=utf-8" />
<title><%= SITE_NAME %> | <%= @current_controller.humanize.capitalize %> | <%=@current_action.humanize.capitalize %> <%= " | " +  h(@page_title) unless @page_title.nil? %></title>
    <%= stylesheet_link_tag 'default', :plugin => 'hyperactive' %>
  	<% if using_tiny_mce? %>
		<%= javascript_include_tag 'tiny_mce/tiny_mce', :plugin => 'tiny_mce' %>
	  	<%= tiny_mce %>   
	<% end %>
    <%= javascript_include_tag :prototype, :plugin => 'hyperactive' %>
	<%= javascript_include_tag :application, :plugin => 'hyperactive' %>	
	<%= javascript_include_tag :effects, :plugin => 'hyperactive' %>
	<%= javascript_include_tag :controls, :plugin => 'hyperactive' %>	
	<%= javascript_include_tag 'flash' %>
	<%= javascript_include_tag 'json' %>
	<%= javascript_include_tag 'cookie' %>	
<meta name="keywords" content="" />
<meta name="description" content="" />
</head>
<body>

<!-- start header -->
<div id="logo">
	<p><%= link_to image_tag("logo_greyscale.png", :plugin => 'hyperactive'), '/home' %></p>
	<h1><%= link_to "#{SITE_NAME}", {:controller => '/home'} %></h1>
	<p>By Free CSS Templates</p>
</div>
<div id="menu">
	<ul id="main">
	<%= tab_for("Main".t, admin_main_url, :controller_name => "main") %>
	<%= tab_for("Categories".t, categories_url, :controller_name => "category") %>
	<%= tab_for("Pages".t, pages_url, :controller_name => "page") %>
	<%= tab_for("Users".t, users_url, :controller_name => "user") %>
	<%= tab_for("Roles".t, roles_url, :controller_name => "role") %>
	<%= tab_for("Permissions".t, static_permissions_url, :controller_name => "static_permission") %>
	</ul>
</div>
<!-- end header -->