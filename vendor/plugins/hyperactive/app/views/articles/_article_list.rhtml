<% (article_list || [Article.new(:summary=>"No events.")]).each do |article| %>
	<div class="post">
		<h1 class="title"><%= link_to h(article.title.titleize), article_url(article) %></h1>
		<p class="byline"><small><%=h long_date(article.created_on) %></small></p>
		<div class="entry">
			<p><%=h article.summary %></p>
			<p class="links"><%= link_to h("Read More"), article_url(article) %></p>
		</div>
	</div>
<% end %>