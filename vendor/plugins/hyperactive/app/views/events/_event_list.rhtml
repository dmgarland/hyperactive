<% (event_list || [Event.new(:summary=>"No events.")]).each do |event| %>
	<div class="post">
		<h1 class="title"><%= link_to h(event.title.titleize), event_url(event) %></h1>
		<% if event.class == Event %>
		<p class="byline"><small><%=h long_date(event.date) %></small></p>
		<% end %>
		<div class="entry">
			<p><%=h event.summary %></p>
			<p class="links"><%= link_to h("Read More"), event_url(event) %></p>
		</div>
	</div>
<% end %>