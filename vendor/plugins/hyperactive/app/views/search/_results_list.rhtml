<% (results_list || [Event.new(:summary=>"No events.")]).each do |result| %>
	<div class="post">
		<h1 class="title"><%= link_to h(result.title.titleize), content_url_for(result) %></h1>
		<p class="byline"><small><%= icon_image_for(result) %> <%=h long_date(result.date) %></small></p>
		<div class="entry">
			<p><%=h result.summary %></p>
			<p class="links"><%= link_to h("Read More"), content_url_for(result) %></p>
		</div>
	</div>
<% end %>