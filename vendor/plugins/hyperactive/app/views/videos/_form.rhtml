<%= error_messages_for 'video' %>

<% if controller.action_name == 'edit' %>
    <%= image_tag url_for_file_column(video, "file", "thumb") %><br/><br/>
<% end %>
<label for="video_title">
  Title*<br/>
  <%= text_field 'video', 'title', :size => 30 %>
</label><br/><br/>
<label for="video_file">
File* - allowed file types are <%= Video.allowed_file_types.join(", ") %><br/>
<%= file_column_field("video", "file") %>
</label><br/><br/>
<label for="video_description">
  Description - duration, codec, a bit about it<br/>
  <%= text_area 'video', 'body', :rows => 5 %>  
</label><br/><br/>