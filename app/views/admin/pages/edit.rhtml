<h1>Editing page</h1>

<% form_for(:page, :url => admin_page_path(@page), :html => { :method => :put }) do |f| %>
  <%= render :partial => 'form', :locals => {:f => f} %>
  <%= submit_tag 'Edit' %>
<% end %>

<p>
<%= link_to 'Show', admin_page_path(@page) %> |
<%= link_to 'Back', admin_pages_path %>
</p>