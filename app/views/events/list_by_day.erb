   <%= link_to(I18n.t('events.list_by_day.next_day')+": #{(@date+(1)).strftime('%D')}", :date=>@date.+(1)) %>
</p> 
<%= render(:partial => "shared/content/list_summary", :collection => @content) %>
<%= page_links(@content) %>
