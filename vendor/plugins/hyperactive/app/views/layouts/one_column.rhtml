<%= render(:partial => 'layouts/header') %>

<!-- start page -->
<div id="page-one-column">
	<!-- start content -->
	<div id="content_wide">
		<% if flash[:notice] -%>
	        <div id="notice"><%= flash[:notice] %></div>
	    <% end -%>
		<% if @current_controller == "events" %>
			<%= render(:partial => "/events/event_nav") %>
		<% end %>		
		<%= @content_for_layout %>
	</div>
	<!-- end content -->
	<div style="clear: both;">&nbsp;</div>
</div>
<!-- end page -->
<%= render :partial => 'layouts/footer' %>
</body>
</html>
