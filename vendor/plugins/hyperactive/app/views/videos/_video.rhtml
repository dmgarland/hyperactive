<h1><%=h video.title.titleize %></h1>
<% if video.processing_status == 2 %>
    <div id="videoplayer<%= video.id %>">
        <p><%= "This item requires Macromedia Flash Player 7.".t %></p>
        <p><%= "To get the latest version please".t %> <a href="http://www.adobe.com/shockwave/download/download.cgi?P1_Prod_Version=ShockwaveFlash" target="_blank"><%= "click here".t %></a>.</p>
    </div>
	<script type="text/javascript">
		var so = new SWFObject('/plugin_assets/hyperactive/flash/mediaplayer.swf','mpl','320','260','7');
		so.addParam('allowfullscreen','true');
		so.addVariable('file','<%= video.file.url %>.flv');
		so.addVariable('image','<%= video.file.url %>.jpg');	  
		so.addVariable('backcolor','0xFFFFFF');
		so.addVariable('autostart','false');
		so.addVariable('usefullscreen', 'true');
		so.write("videoplayer<%= video.id %>");
	</script>	
	<p><em><%= "Places:".t %></em> <%= render(:partial => "shared/tag_list", :object=> @content.place_tag_list, :locals => {:tag_type => "place"}) %></p>
    <%=h video.summary %><br/>
	<p><em><%= "Tagged as:".t %></em> <%= render(:partial => "shared/tag_list", :object=> @content.tag_list) %></p>
	<%# Removing direct links to files so that only torrent links are visible. %>
	<%# Uncomment the links by removing the '#' if you want to show them.  %>
	
    <%# link_to image_tag("icon_video.gif"), video.file.url %> 
    <%# link_to "download original", video.file.url %>
	<%# link_to image_tag("icon_video.gif"), oggify(video.file.url) %> 
	<%# link_to "download ogg", oggify(video.file.url) %>
	
	<%= link_to image_tag("icon_video.gif", :plugin => 'hyperactive'), torrentify(video.file.url) %> 
	<%= link_to "download torrent", torrentify(video.file.url) %>
	<%= render(:partial => 'videos/help_instructions')%>
<% else %>
    <strong><%=h video.title.titleize %></strong><br />
    <%= auto_link(video.body) %><br/>
    <%= link_to image_tag("icon_video.gif", :plugin => 'hyperactive'), video.file.url %> 
    <%= link_to "download original", video.file.url %>
    <p><%= "This video is still being converted, or else there has been some kind of error.".t %></p>
<% end %>
