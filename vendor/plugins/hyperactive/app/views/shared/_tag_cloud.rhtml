<% id = "_place" if tag_type == "place" %>

<div id="tag_cloud<%= id %>">
    <% if !tag_cloud.nil? && tag_cloud.length > 0 %>
        <% build_tag_cloud(tag_cloud, %w(cloud1 cloud2 cloud3 cloud4 cloud5 cloud6 cloud7 cloud8 cloud9)) do |tag, cloud_class| %>
            <% url = tag_item_url %>
            <% url = place_tag_item_url if tag_type == "place"%>
            <%= link_to(h("#{tag}"), "#{url}#{tag}", { :class => "#{cloud_class} ", :style => "margin: .15em" } ) %>
        <% end %>
    <% else %>
            <p><%= 'No tags found.'.t %></p>
    <% end %>
</div>