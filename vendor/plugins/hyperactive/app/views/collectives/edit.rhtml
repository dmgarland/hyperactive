<h1>Editing collective</h1>

<%= error_messages_for :collective %>

<% form_for(:collective, :url => collective_path(@collective), :html => { :method => :put, :multipart => true }) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Summary</b><br />
    <%= f.text_area :summary, :cols=>80, :rows=>10  %>
  </p>
  
  <p>
  	<% if controller.action_name == 'edit' && !@collective.image.blank? %>
        <%= image_tag @collective.image.thumb.url %><br/><br/>
    <% end %>
  	<b>Logo image</b><br/>
	<%= upload_column_field("collective", "image") %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', collective_path(@collective) %> |
<%= link_to 'Back', collectives_path %>